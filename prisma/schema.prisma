// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String @unique
  password String
}

model Person {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Date {
  id           Int    @id @default(autoincrement())
  mounthNumber String
  mounthString String
  year         String
}

model Function {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Sheet {
  id           String @id
  day          Int    @unique
  personName   String
  functionName String
}
